@page
@model IndexModel
@{
    ViewData["Title"] = "ALAN - Autonomous Learning Agent Network";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4">ALAN</h1>
            <p class="lead">Autonomous Learning Agent Network</p>
            <p class="text-muted">Observing agent thoughts and actions in real-time</p>
        </div>
    </div>

    <div class="row">
        <!-- Agent Status Card -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Agent Status</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            <span id="agent-status" class="badge bg-secondary">Initializing</span>
                        </dd>
                        
                        <dt class="col-sm-5">Current Goal:</dt>
                        <dd class="col-sm-7" id="agent-goal">Loading...</dd>
                        
                        <dt class="col-sm-5">Last Updated:</dt>
                        <dd class="col-sm-7" id="agent-updated">-</dd>
                        
                        <dt class="col-sm-5">Current Prompt:</dt>
                        <dd class="col-sm-7" id="agent-prompt">-</dd>
                    </dl>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Connection Status</h5>
                </div>
                <div class="card-body">
                    <p>
                        <span id="connection-status" class="badge bg-warning">Connecting...</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Thoughts Panel -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Recent Thoughts</h5>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    <div id="thoughts-container">
                        <p class="text-muted">Waiting for agent thoughts...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions Panel -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Recent Actions</h5>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    <div id="actions-container">
                        <p class="text-muted">Waiting for agent actions...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detail View Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModalTitle">Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="detailModalContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let connection = null;
        let isPolling = false;
        let pollingActive = false;
        const seenThoughts = new Set();
        const seenActions = new Set();
        
        // Store full objects for detail view
        const thoughts = [];
        const actions = [];
        
        function handleSignalRLoadError() {
            console.warn('SignalR CDN not available, using polling fallback');
            document.getElementById("connection-status").textContent = "Demo Mode (No Real-time Connection)";
            document.getElementById("connection-status").className = "badge bg-info";
            startPolling();
        }
        
        async function pollOnce() {
            if (!pollingActive || isPolling) return;
            
            isPolling = true;
            try {
                const response = await fetch('/api/state');
                if (response.ok) {
                    const state = await response.json();
                    updateAgentStatus(state);
                    
                    // Add only new thoughts
                    if (state.recentThoughts && state.recentThoughts.length > 0) {
                        state.recentThoughts.forEach(thought => {
                            if (!seenThoughts.has(thought.id)) {
                                addThought(thought);
                                seenThoughts.add(thought.id);
                            }
                        });
                    }
                    
                    // Add only new actions
                    if (state.recentActions && state.recentActions.length > 0) {
                        state.recentActions.forEach(action => {
                            if (!seenActions.has(action.id)) {
                                addAction(action);
                                seenActions.add(action.id);
                            }
                        });
                    }
                }
            } catch (error) {
                console.error('Polling error:', error);
            } finally {
                isPolling = false;
                if (pollingActive) {
                    setTimeout(pollOnce, 5000);
                }
            }
        }
        
        function startPolling() {
            pollingActive = true;
            pollOnce();
        }
        
        function stopPolling() {
            pollingActive = false;
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.14/signalr.min.js" 
            onerror="handleSignalRLoadError()"></script>
    <script>
        // Initialize SignalR if library loaded successfully
        if (typeof signalR !== 'undefined') {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/agenthub")
                .withAutomaticReconnect()
                .build();

        connection.on("ReceiveStateUpdate", function (state) {
            updateAgentStatus(state);
        });

        connection.on("ReceiveThought", function (thought) {
            addThought(thought);
        });

        connection.on("ReceiveAction", function (action) {
            addAction(action);
        });

        connection.on("ReceiveActionUpdate", function (action) {
            updateAction(action);
        });

        connection.start()
            .then(() => {
                document.getElementById("connection-status").textContent = "Connected";
                document.getElementById("connection-status").className = "badge bg-success";
            })
            .catch(err => {
                console.error(err);
                document.getElementById("connection-status").textContent = "Connection Failed";
                document.getElementById("connection-status").className = "badge bg-danger";
            });

        connection.onreconnecting(() => {
            document.getElementById("connection-status").textContent = "Reconnecting...";
            document.getElementById("connection-status").className = "badge bg-warning";
        });

        connection.onreconnected(() => {
            document.getElementById("connection-status").textContent = "Connected";
            document.getElementById("connection-status").className = "badge bg-success";
        });
        } else {
            // SignalR not available, will use polling
            handleSignalRLoadError();
        }

        function updateAgentStatus(state) {
            const statusBadge = document.getElementById("agent-status");
            statusBadge.textContent = state.status;
            
            // Update badge color based on status
            statusBadge.className = "badge " + getStatusColor(state.status);
            
            document.getElementById("agent-goal").textContent = state.currentGoal || "No specific goal";
            document.getElementById("agent-updated").textContent = new Date(state.lastUpdated).toLocaleTimeString();
            document.getElementById("agent-prompt").textContent = state.currentPrompt || "Default prompt";
        }

        function getStatusColor(status) {
            switch(status) {
                case "Idle": return "bg-secondary";
                case "Thinking": return "bg-info";
                case "Acting": return "bg-primary";
                case "Paused": return "bg-warning";
                case "Error": return "bg-danger";
                default: return "bg-secondary";
            }
        }

        function getThoughtTypeColor(type) {
            switch(type) {
                case "Observation": return "primary";
                case "Planning": return "info";
                case "Reasoning": return "success";
                case "Decision": return "warning";
                case "Reflection": return "secondary";
                default: return "secondary";
            }
        }

        function getActionStatusColor(status) {
            switch(status) {
                case "Pending": return "secondary";
                case "Running": return "info";
                case "Completed": return "success";
                case "Failed": return "danger";
                default: return "secondary";
            }
        }

        function addThought(thought) {
            const container = document.getElementById("thoughts-container");
            
            // Remove "waiting" message if present
            if (container.querySelector("p.text-muted")) {
                container.innerHTML = "";
            }
            
            // Store for detail view
            thoughts.unshift(thought);
            if (thoughts.length > 100) thoughts.pop();
            
            // Check for MCP usage
            const hasMcp = thought.toolCalls && thought.toolCalls.length > 0;
            const mcpBadge = hasMcp ? `<span class="badge bg-info ms-1" title="${thought.toolCalls.length} tool calls">🔧 ${thought.toolCalls.length}</span>` : '';
            
            const thoughtDiv = document.createElement("div");
            thoughtDiv.className = "mb-3 p-2 border-start border-3 border-" + getThoughtTypeColor(thought.type);
            thoughtDiv.style.cursor = "pointer";
            thoughtDiv.dataset.thoughtId = thought.id;
            thoughtDiv.onclick = () => showThoughtDetail(thought.id);
            thoughtDiv.innerHTML = `
                <small class="text-muted">${new Date(thought.timestamp).toLocaleTimeString()}</small>
                <span class="badge bg-${getThoughtTypeColor(thought.type)} ms-2">${thought.type}</span>
                ${mcpBadge}
                <p class="mb-0 mt-1">${escapeHtml(truncate(thought.content, 200))}</p>
            `;
            
            container.insertBefore(thoughtDiv, container.firstChild);
            
            // Keep only last 20 thoughts
            while (container.children.length > 20) {
                container.removeChild(container.lastChild);
            }
        }

        function addAction(action) {
            const container = document.getElementById("actions-container");
            
            // Remove "waiting" message if present
            if (container.querySelector("p.text-muted")) {
                container.innerHTML = "";
            }
            
            // Store for detail view
            actions.unshift(action);
            if (actions.length > 50) actions.pop();
            
            // Check for MCP usage
            const hasMcp = action.toolCalls && action.toolCalls.length > 0;
            const mcpBadge = hasMcp ? `<span class="badge bg-info ms-1" title="${action.toolCalls.length} tool calls">🔧 ${action.toolCalls.length}</span>` : '';
            
            const actionDiv = document.createElement("div");
            actionDiv.className = "mb-3 p-2 border rounded";
            actionDiv.style.cursor = "pointer";
            actionDiv.dataset.actionId = action.id;
            actionDiv.onclick = () => showActionDetail(action.id);
            actionDiv.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <strong>${escapeHtml(action.name)}</strong>
                    <span class="badge bg-${getActionStatusColor(action.status)}">${action.status}</span>
                </div>
                <small class="text-muted">${new Date(action.timestamp).toLocaleTimeString()}</small>
                ${mcpBadge}
                <p class="mb-0 mt-1">${escapeHtml(truncate(action.description, 150))}</p>
                ${action.output ? `<small class="text-success">Output: ${escapeHtml(truncate(action.output, 100))}</small>` : ''}
            `;
            
            container.insertBefore(actionDiv, container.firstChild);
            
            // Keep only last 15 actions
            while (container.children.length > 15) {
                container.removeChild(container.lastChild);
            }
        }
        
        function updateAction(action) {
            // Update action in the stored array
            const index = actions.findIndex(a => a.id === action.id);
            if (index !== -1) {
                actions[index] = action;
            }
            
            // Find and update the action element in the DOM
            const container = document.getElementById("actions-container");
            const element = container.querySelector(`[data-action-id="${action.id}"]`);
            
            if (element) {
                // Check for MCP usage
                const hasMcp = action.toolCalls && action.toolCalls.length > 0;
                const mcpBadge = hasMcp ? `<span class="badge bg-info ms-1" title="${action.toolCalls.length} tool calls">🔧 ${action.toolCalls.length}</span>` : '';
                
                // Update the element's content
                element.innerHTML = `
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>${escapeHtml(action.name)}</strong>
                        <span class="badge bg-${getActionStatusColor(action.status)}">${action.status}</span>
                    </div>
                    <small class="text-muted">${new Date(action.timestamp).toLocaleTimeString()}</small>
                    ${mcpBadge}
                    <p class="mb-0 mt-1">${escapeHtml(truncate(action.description, 150))}</p>
                    ${action.output ? `<small class="text-success">Output: ${escapeHtml(truncate(action.output, 100))}</small>` : ''}
                `;
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        function truncate(text, maxLength) {
            if (!text) return '';
            return text.length > maxLength ? text.substring(0, maxLength) + '...' : text;
        }
        
        function showThoughtDetail(thoughtId) {
            const thought = thoughts.find(t => t.id === thoughtId);
            if (!thought) return;
            
            let html = `
                <div class="mb-3">
                    <span class="badge bg-${getThoughtTypeColor(thought.type)} fs-6">${thought.type}</span>
                    <small class="text-muted ms-3">${new Date(thought.timestamp).toLocaleString()}</small>
                </div>
                <div class="card mb-3">
                    <div class="card-header"><strong>Content</strong></div>
                    <div class="card-body">
                        <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">${escapeHtml(thought.content)}</pre>
                    </div>
                </div>
            `;
            
            if (thought.toolCalls && thought.toolCalls.length > 0) {
                html += `
                    <div class="card">
                        <div class="card-header"><strong>MCP Tool Calls (${thought.toolCalls.length})</strong></div>
                        <div class="card-body">
                `;
                
                thought.toolCalls.forEach((tc, idx) => {
                    const successBadge = tc.success ? 'bg-success' : 'bg-danger';
                    const serverBadge = tc.mcpServer ? `<span class="badge bg-secondary ms-2">${tc.mcpServer}</span>` : '';
                    const duration = tc.durationMs ? `<small class="text-muted">(${tc.durationMs.toFixed(1)}ms)</small>` : '';
                    
                    html += `
                        <div class="mb-3 ${idx > 0 ? 'border-top pt-3' : ''}">
                            <div class="mb-2">
                                <span class="badge ${successBadge}">${tc.success ? '✓' : '✗'}</span>
                                <strong class="ms-2">${escapeHtml(tc.toolName)}</strong>
                                ${serverBadge}
                                ${duration}
                            </div>
                            ${tc.result ? `<pre class="bg-light p-2 rounded mb-0" style="font-size: 0.9em; max-height: 200px; overflow-y: auto;">${escapeHtml(tc.result)}</pre>` : '<em class="text-muted">No result</em>'}
                        </div>
                    `;
                });
                
                html += `
                        </div>
                    </div>
                `;
            }
            
            document.getElementById('detailModalTitle').textContent = 'Thought Details';
            document.getElementById('detailModalContent').innerHTML = html;
            new bootstrap.Modal(document.getElementById('detailModal')).show();
        }
        
        function showActionDetail(actionId) {
            const action = actions.find(a => a.id === actionId);
            if (!action) return;
            
            let html = `
                <div class="mb-3">
                    <strong class="fs-5">${escapeHtml(action.name)}</strong>
                    <span class="badge bg-${getActionStatusColor(action.status)} ms-2">${action.status}</span>
                    <br>
                    <small class="text-muted">${new Date(action.timestamp).toLocaleString()}</small>
                </div>
                
                ${action.description ? `
                <div class="card mb-3">
                    <div class="card-header"><strong>Description</strong></div>
                    <div class="card-body">${escapeHtml(action.description)}</div>
                </div>` : ''}
                
                ${action.input ? `
                <div class="card mb-3">
                    <div class="card-header"><strong>Input</strong></div>
                    <div class="card-body"><pre class="mb-0" style="white-space: pre-wrap;">${escapeHtml(action.input)}</pre></div>
                </div>` : ''}
                
                ${action.output ? `
                <div class="card mb-3">
                    <div class="card-header"><strong>Output</strong></div>
                    <div class="card-body"><pre class="mb-0" style="white-space: pre-wrap;">${escapeHtml(action.output)}</pre></div>
                </div>` : ''}
            `;
            
            if (action.toolCalls && action.toolCalls.length > 0) {
                html += `
                    <div class="card">
                        <div class="card-header"><strong>MCP Tool Calls (${action.toolCalls.length})</strong></div>
                        <div class="card-body">
                `;
                
                action.toolCalls.forEach((tc, idx) => {
                    const successBadge = tc.success ? 'bg-success' : 'bg-danger';
                    const serverBadge = tc.mcpServer ? `<span class="badge bg-secondary ms-2">${tc.mcpServer}</span>` : '';
                    const duration = tc.durationMs ? `<small class="text-muted">(${tc.durationMs.toFixed(1)}ms)</small>` : '';
                    
                    html += `
                        <div class="mb-3 ${idx > 0 ? 'border-top pt-3' : ''}">
                            <div class="mb-2">
                                <span class="badge ${successBadge}">${tc.success ? '✓' : '✗'}</span>
                                <strong class="ms-2">${escapeHtml(tc.toolName)}</strong>
                                ${serverBadge}
                                ${duration}
                            </div>
                            ${tc.result ? `<pre class="bg-light p-2 rounded mb-0" style="font-size: 0.9em; max-height: 200px; overflow-y: auto;">${escapeHtml(tc.result)}</pre>` : '<em class="text-muted">No result</em>'}
                        </div>
                    `;
                });
                
                html += `
                        </div>
                    </div>
                `;
            }
            
            document.getElementById('detailModalTitle').textContent = 'Action Details';
            document.getElementById('detailModalContent').innerHTML = html;
            new bootstrap.Modal(document.getElementById('detailModal')).show();
        }
    </script>
}
