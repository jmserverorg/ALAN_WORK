{
  "editor.defaultFormatter": "prettier.prettier-vscode",
  "editor.formatOnSave": true,
  // Exclude node_modules from file watching
  "files.watcherExclude": {
    "**/node_modules/**": true
  },
  
  // Exclude node_modules from search
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/out": true
  },
  
  // Hide node_modules from the explorer
  "files.exclude": {
    "**/node_modules": false, // Set to true to completely hide from explorer,
    "__azurite*": true,
    "__blobstorage__": true,
    "__queuestorage__": true,
    "__tablestorage__": true
  },
  
  // TypeScript: Don't show errors from node_modules
  "typescript.preferences.autoImportFileExcludePatterns": [
    "**/node_modules/**"
  ],
  
  // JavaScript: Validate only what you're working on
  "javascript.validate.enable": true,
  "typescript.validate.enable": true,
  
  // Exclude node_modules from problems view
  "problems.autoReveal": true,
  "jest.rootPath": "src/ALAN.Web"
}
