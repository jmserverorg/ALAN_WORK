{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: Launch ALAN.Agent",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/src/ALAN.Agent/ALAN.Agent.csproj",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "name": "C#: Launch ALAN.ChatApi",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/src/ALAN.ChatApi/ALAN.ChatApi.csproj",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "name": "Launch ALAN.Web (React)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5269",
      "webRoot": "${workspaceFolder}/src/ALAN.Web",
      "preLaunchTask": "dev-web-frontend",
      "postDebugTask": "stop-frontend-watch"
      
    }
  ],
  "compounds": [
    {
      "name": "Launch Agent + ChatApi + Web",
      "configurations": ["C#: Launch ALAN.Agent", "C#: Launch ALAN.ChatApi", "Launch ALAN.Web (React)"],
      "stopAll": true,
      "preLaunchTask": "build-solution"
    }
  ]
}
